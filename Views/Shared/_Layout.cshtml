@{
    var hideLayout = ViewData["HideLayout"] as bool? ?? false;
}
@using System.Security.Claims
@inject GymApp_v1.Data.DataContext _layoutContext
@using System.Security.Claims
@inject GymApp_v1.Data.DataContext _layoutContext

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Fitness App</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GymApp_v1.styles.css" asp-append-version="true" />
</head>
<body>
    @if (!hideLayout)
    {
        
        string? email      = User.FindFirstValue(ClaimTypes.Email);
        byte[]? pictureData = null;

        if (!string.IsNullOrEmpty(email))
        {
            pictureData = _layoutContext.Users
                            .Where(u => u.Email == email)
                            .Select(u => u.ProfilePicture)
                            .FirstOrDefault();
        }

        // base64 string'e çevir (null ise boş dize)
        var pictureBase64 = pictureData != null
            ? Convert.ToBase64String(pictureData)
            : null;
    
        
        string? email      = User.FindFirstValue(ClaimTypes.Email);
        byte[]? pictureData = null;

        if (!string.IsNullOrEmpty(email))
        {
            pictureData = _layoutContext.Users
                            .Where(u => u.Email == email)
                            .Select(u => u.ProfilePicture)
                            .FirstOrDefault();
        }

        // base64 string'e çevir (null ise boş dize)
        var pictureBase64 = pictureData != null
            ? Convert.ToBase64String(pictureData)
            : null;
    
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
                <div class="container-fluid">
                    <a class="navbar-brand" asp-controller="Home" asp-action="Index">GymApp_v1</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Admin" asp-action="ListAllUsers">Kullanıcıları Yönet</a>
                                </li>
                            }
                            @if (User.IsInRole("User"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Profile" asp-action="Dashboard">Profilim</a>
                                </li>
                            }
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Membership" asp-action="ViewAllMemberships">Üyelik Paketleri</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Home" asp-action="Privacy">Privacy</a>
                            </li>
                        </ul>

                        <ul class="navbar-nav">
                            @if (User.Identity?.IsAuthenticated == true)
                            {
                                <li class="nav-item d-flex align-items-center">
                                    @if (!string.IsNullOrEmpty(pictureBase64))
                                    {
                                        <img src="data:image/png;base64,@pictureBase64"
                                            class="rounded-circle me-2"
                                            width="32" height="32"
                                            alt="Profil Fotoğrafı" />
                                    }
                                    <span class="nav-link text-dark">Merhaba, @User.Identity.Name</span>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Authentication" asp-action="Logout">Çıkış Yap</a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Authentication" asp-action="Login">Giriş Yap</a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
    }

    @{
        var infoMsg  = TempData["Info"]  as string;
        var errorMsg = TempData["Error"] as string;
    }
    @if (!string.IsNullOrEmpty(infoMsg))
    {
        <div class="alert alert-success">@infoMsg</div>
    }
    @if (!string.IsNullOrEmpty(errorMsg))
    {
        <div class="alert alert-danger">@errorMsg</div>
    }

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - GymApp_v1 - <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
