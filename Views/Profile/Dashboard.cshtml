@model GymApp_v1.Data.User
@{
    ViewData["Title"] = "Kullanıcı Paneli";
    var subscription = ViewBag.Subscription as GymApp_v1.Data.Subscription;
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Hoş geldin @Model.Username!</h2>
    <a asp-action="EditProfile" class="btn btn-primary">
        <i class="bi bi-pencil-square"></i> Profili Düzenle
    </a>
</div>

<div class="row">
    <div class="col-md-4">
        @if (Model.ProfilePicture != null && Model.ProfilePicture.Length > 0)
        {
            <img src="data:image/png;base64,@Convert.ToBase64String(Model.ProfilePicture)" 
                 class="img-fluid rounded" style="max-width: 250px;" />
        }
        else
        {
            <img src="~/images/placeholder.png" alt="Varsayılan Resim" 
                 class="img-fluid rounded" style="max-width: 250px;" />
        }
    </div>
    <div class="col-md-8">
        <ul class="list-group list-group-flush">
            <li class="list-group-item"><strong>Email:</strong> @Model.Email</li>
            <li class="list-group-item"><strong>Kullanıcı Adı:</strong> @Model.Username</li>
            <li class="list-group-item"><strong>Rol:</strong> @Model.Role</li>
            @if (subscription != null)
            {
                <li class="list-group-item"><strong>Üyelik:</strong> @subscription.Membership.Title</li>
                <li class="list-group-item"><strong>Süre:</strong> @subscription.Membership.DurationInDays gün</li>
                <li class="list-group-item"><strong>Fiyat:</strong> @subscription.Membership.Price.ToString("C2", new System.Globalization.CultureInfo("tr-TR"))</li>
                <li class="list-group-item"><strong>Başlangıç:</strong> @subscription.StartDate.ToShortDateString()</li>
                <li class="list-group-item"><strong>Bitiş:</strong> @subscription.EndDate.ToShortDateString()</li>
            }
            else
            {
                <li class="list-group-item"><strong>Üyelik:</strong> Yok</li>
            }
        </ul>
    </div>
</div>

@section Scripts {
    <script>
    window.history.replaceState({}, '', window.location.href);
    window.addEventListener('popstate', function () {
        window.location.reload(true);
    });
    </script>
}