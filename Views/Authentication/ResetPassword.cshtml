@{
    ViewData["Title"] = "Şifre Sıfırlama";
    ViewData["HideLayout"] = true;
}
@model GymApp_v1.Models.ResetPasswordViewModel

<h2>Yeni Şifre Belirle</h2>

<form asp-action="ResetPassword" method="post">
    <input type="hidden" name="Email" value="@Model.Email" />

    <div class="mb-2">
        <label>Yeni Şifre</label>
        <input asp-for="NewPassword" type="password" class="form-control" required />
    </div>
    <div class="mb-2">
        <label>Yeni Şifre Tekrar</label>
        <input asp-for="ConfirmPassword" type="password" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-success">Şifreyi Güncelle</button>
</form>

@if (ViewBag.Error != null)
{
    <div class="text-danger mt-2">@ViewBag.Error</div>
}
