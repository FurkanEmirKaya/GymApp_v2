@model GymApp_v1.Data.User
@{
    ViewData["Title"] = "Kullanıcı Sil";
}

<link rel="stylesheet" href="~/css/admin.css" />

<div class="admin-container">
    <h2><i class="bi bi-exclamation-triangle-fill me-2 text-danger"></i>Kullanıcı Silme Onayı</h2>
    
    <div class="alert alert-danger">
        <h4><i class="bi bi-exclamation-octagon me-2"></i>Dikkat!</h4>
        <p class="mb-0">Bu kullanıcıyı silmek üzeresiniz. Bu işlem geri alınamaz.</p>
    </div>
    
    <div class="card">
        <div class="card-header">
            <h5>Silinecek Kullanıcı Bilgileri</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Model.Email</dd>
                
                <dt class="col-sm-3">Kullanıcı Adı</dt>
                <dd class="col-sm-9">@Model.Username</dd>
                
                <dt class="col-sm-3">Rol</dt>
                <dd class="col-sm-9">
                    <span class="badge bg-@(Model.Role == "Admin" ? "danger" : "primary")">@Model.Role</span>
                </dd>
            </dl>
            
            <form asp-controller="Admin" asp-action="DeleteUser" method="post" class="mt-4">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex justify-content-end gap-2">
                    <a asp-action="ListAllUsers" class="btn btn-secondary">
                        <i class="bi bi-x-lg me-1"></i>İptal
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash me-1"></i>Evet, Sil
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>