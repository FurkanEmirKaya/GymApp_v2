@model GymApp_v1.Models.MembershipViewModel

<form asp-controller="Admin" asp-action="CreateMemberships" method="post" enctype="multipart/form-data">
  <div class="mb-3">
    <label asp-for="Title" class="form-label">Başlık</label>
    <input asp-for="Title" class="form-control" />
    <span asp-validation-for="Title" class="text-danger"></span>
  </div>

  <div class="mb-3">
    <label asp-for="Description" class="form-label">Açıklama</label>
    <input asp-for="Description" class="form-control" />
    <span asp-validation-for="Description" class="text-danger"></span>
  </div>

  <div class="mb-3">
    <label asp-for="DurationInDays" class="form-label">Süre (gün)</label>
    <input asp-for="DurationInDays" type="number" class="form-control" />
    <span asp-validation-for="DurationInDays" class="text-danger"></span>
  </div>

  <div class="mb-3">
    <label asp-for="Type" class="form-label">Tür</label>
    <select asp-for="Type" asp-items="ViewBag.TypeItems" class="form-select" required>
      <option value="" disabled selected hidden>-- Seçiniz --</option>
    </select>
    <span asp-validation-for="Type" class="text-danger"></span>
  </div>

  <div class="mb-3">
    <label asp-for="Image" class="form-label">Resim</label>
    <input asp-for="Image" type="file" class="form-control" />
    <span asp-validation-for="Image" class="text-danger"></span>
  </div>

  <div class="mb-3">
    <label asp-for="Price" class="form-label">Fiyat</label>
    <input asp-for="Price" 
           type="number" 
           step="0.1" 
           min="0" 
           class="form-control" />
    <span asp-validation-for="Price" class="text-danger"></span>
  </div>

  <button type="submit" class="btn btn-primary">Kaydet</button>
</form>
